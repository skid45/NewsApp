<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/primary_60</item>
        <item name="itemIconTint">@color/primary_100</item>
        <item name="itemActiveIndicatorStyle">
            @style/Widget.Material3.BottomNavigationView.ActiveIndicator.Primary50
        </item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceLabelMedium</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemTextColor">@color/primary_100</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator.Primary50">
        <item name="android:color">@color/primary_50</item>
    </style>

    <style name="MaterialToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_60</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">?attr/textAppearanceTitleLarge</item>
        <item name="titleTextColor">@color/neutral_99</item>
        <item name="collapseIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="CircleImageViewStyle">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

</resources>